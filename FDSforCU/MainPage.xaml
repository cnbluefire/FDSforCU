<Page
    x:Class="FDSforCU.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FDSforCU"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FDSforCU.Models"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="HamburgerMenuItemTemplate">
            <Border Height="44">
                <TextBlock VerticalAlignment="Center" Text="{Binding Title}" />
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowState">
                <VisualState x:Name="Big" >
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="rootSplitView.PaneBackground" Value="{ThemeResource SystemControlAcrylicWindowMediumBrush}" />
                        <Setter Target="rootSplitView.DisplayMode" Value="Inline" />
                        <Setter Target="rootSplitView.IsPaneOpen" Value="True" />
                        <Setter Target="HamburgerIconButton.Visibility" Value="Collapsed" />
                        <Setter Target="HeaderGrid.Visibility" Value="Collapsed" />
                        <Setter Target="HamburgerHeadRow.Height" Value="0" />
                        <Setter Target="TitleGrid.Background" Value="{ThemeResource SystemControlAcrylicWindowMediumBrush}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <SplitView x:Name="rootSplitView" Grid.Row="1" DisplayMode="Overlay" OpenPaneLength="320" PaneBackground="{ThemeResource SystemControlAcrylicElementMediumBrush}" >
            <SplitView.Pane>
                <Grid x:Name="PaneRoot">
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="HamburgerHeadRow" Height="44" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListView x:Name="HamburgerMenu" Grid.Row="1" ItemsSource="{x:Bind HamburgerMenuList}" ItemTemplate="{StaticResource HamburgerMenuItemTemplate}" SelectionChanged="HamburgerMenu_SelectionChanged" Loaded="HamburgerMenu_Loaded" />
                    <ListView x:Name="ButtomMenu" Grid.Row="2" ItemsSource="{x:Bind ButtomMenuList}" ItemTemplate="{StaticResource HamburgerMenuItemTemplate}" SelectionChanged="HamburgerMenu_SelectionChanged" />
                </Grid>
            </SplitView.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="44" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Frame x:Name="ContentFrame" Grid.RowSpan="2" />
                <Grid x:Name="HeaderGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource SystemControlAcrylicElementBrush}">
                    <TextBlock x:Name="HeaderTextBlock" Margin="54,5,10,5" Style="{ThemeResource TitleTextBlockStyle}" Text="{x:Bind selectedModel.Title,Mode=OneWay}" />
                </Grid>
            </Grid>
        </SplitView>
        <Button x:Name="HamburgerIconButton" Background="Transparent" Grid.Row="1" Width="44" Height="44" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1" Style="{ThemeResource ButtonRevealStyle}" Click="HamburgerIconButton_Click" >
            <FontIcon FontFamily="Segoe MDL2 Assets" FontSize="24" Glyph="&#xE700;" />
        </Button>
        <Grid x:Name="TitleGrid" Height="32" Background="{ThemeResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}">
            <TextBlock x:Name="TitleText" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Text="FDSforCU Simple" />
        </Grid>
    </Grid>
</Page>